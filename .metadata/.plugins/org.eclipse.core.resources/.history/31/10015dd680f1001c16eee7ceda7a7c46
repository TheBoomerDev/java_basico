package test.baraja;

public class Juego {

	public static void main(String[] args) {
		
		Baraja baraja = new Baraja();
		
		// While
		int numeroCartas = 0;
		while (numeroCartas < 40) {
			Carta carta = new Carta("picas", 1+numeroCartas); 
			baraja.addCarta(carta);
			numeroCartas++; // numeroCartas = numeroCartas + 1
		}
		
		// DO-While
		numeroCartas = 0;
		do {
			Carta carta = new Carta("corazones", 1+numeroCartas); 
			baraja.addCarta(carta);
			numeroCartas++; // numeroCartas = numeroCartas + 1
		}while(numeroCartas < 40);
		
		// FOR
		numeroCartas = 40;
		for (int i = 0; i < numeroCartas; i++) {
			Carta carta = new Carta("rombos", 1+i); 
			baraja.addCarta(carta);
		}
		
	}
}
